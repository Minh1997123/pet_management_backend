{
  "compilerOptions": {
    "target": "es2024",
    "strict": true,
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

